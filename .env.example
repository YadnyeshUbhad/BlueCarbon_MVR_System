# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=true

# =============================================================================
# FEATURE FLAGS - Enable/Disable Real Integrations (set to 'true' to enable)
# =============================================================================

# Firebase Integration (enables real-time database and authentication)
USE_FIREBASE=false
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key

# Supabase Configuration (alternative to Firebase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Real Satellite Data Integration (replaces simulation with actual APIs)
USE_REAL_SATELLITE=false
GOOGLE_EARTH_ENGINE_API_KEY=your-google-earth-engine-api-key
PLANET_API_KEY=your-planet-labs-api-key

# Drone Data Processing (enables real drone image processing)
USE_REAL_DRONE=false
DRONE_PROCESSING_ENABLED=true

# Email Notifications (enables real email sending)
USE_EMAIL_NOTIFICATIONS=false

# Real Blockchain Integration (connects to actual blockchain network)
USE_REAL_BLOCKCHAIN=false

# PWA Features (Progressive Web App capabilities)
ENABLE_PWA_FEATURES=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_BACKGROUND_SYNC=true

# Blockchain Configuration  
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_RPC_URL=https://rpc.testnet.example.com
BLOCKCHAIN_PRIVATE_KEY=your-private-key-for-blockchain-transactions
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# External APIs
NASA_API_KEY=your-nasa-api-key
ESA_API_KEY=your-esa-api-key  
ISRO_API_KEY=your-isro-api-key
OPENWEATHER_API_KEY=your-openweather-api-key

# IoT/Sensor Configuration
IOT_MQTT_BROKER=mqtt.example.com
IOT_USERNAME=your-iot-username
IOT_PASSWORD=your-iot-password

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_KEY=your-google-cloud-service-account.json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Storage Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Security
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-32-bytes

# Database Backup
DB_BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Development/Debug
DEBUG=true
LOG_LEVEL=INFO
ENABLE_LOGGING=true