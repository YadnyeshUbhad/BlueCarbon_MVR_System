{
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "runtime": "python3.12",
  "functions": {
    "app.py": {
      "memory": 1024,
      "timeout": 60
    }
  },
  "env": {
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "False"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
