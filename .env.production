# Production Environment Variables
FLASK_ENV=production
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
DATABASE_URL=sqlite:///blue_carbon_mrv_production.db

# Blockchain Configuration (can be disabled for free deployment)
HARDHAT_NETWORK_URL=http://localhost:8545
PRIVATE_KEY=your-private-key-here
ENABLE_REAL_BLOCKCHAIN=false

# External APIs (optional - system works without these)
SUPABASE_URL=your_supabase_url_optional
SUPABASE_KEY=your_supabase_key_optional
FIREBASE_CONFIG={}

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Security
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Performance
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300